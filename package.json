{
  "name": "paragone",
  "version": "1.0.2",
  "description": "A simple, modern internationalization (i18n) library for SvelteKit with Svelte 5 Runes support",
  "author": "Tayfun Guelcan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tguelcan/paragone.git"
  },
  "homepage": "https://github.com/tguelcan/paragone#readme",
  "bugs": {
    "url": "https://github.com/tguelcan/paragone/issues"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "svelte5",
    "i18n",
    "internationalization",
    "translation",
    "locale",
    "runes",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "publint": "^0.3.15",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  },
  "sideEffects": false
}
